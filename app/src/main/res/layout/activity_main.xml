<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c_Equals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#71D4E1"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="260dp"
        android:background="@drawable/gen_dalchanin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/c_Expression"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/rokkitt"
            android:gravity="end"
            android:maxLines="1"
            android:text="Result"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/c_Result"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/rokkitt"
            android:gravity="end"
            android:maxLines="1"
            android:text="Result"
            android:textSize="48sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/c_AC"
                style="@style/Action_Buttons"
                android:scaleType="center"
                android:src="@mipmap/clear_all" />

            <TextView
                android:id="@+id/c_Open"
                style="@style/Action_Buttons"
                android:text="(" />

            <TextView
                android:id="@+id/c_Close"
                style="@style/Action_Buttons"
                android:text=")" />

            <TextView
                android:id="@+id/c_Div"
                style="@style/Action_Buttons"
                android:text=":" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c_Seven"
                style="@style/Numbers_Buttons"
                android:text="7" />

            <TextView
                android:id="@+id/c_Eight"
                style="@style/Numbers_Buttons"
                android:text="8" />

            <TextView
                android:id="@+id/c_Nine"
                style="@style/Numbers_Buttons"
                android:text="9" />

            <TextView
                android:id="@+id/c_Multi"
                style="@style/Action_Buttons"
                android:text="x" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c_Four"
                style="@style/Numbers_Buttons"
                android:text="4" />

            <TextView
                android:id="@+id/c_Five"
                style="@style/Numbers_Buttons"
                android:text="5" />

            <TextView
                android:id="@+id/c_Six"
                style="@style/Numbers_Buttons"
                android:text="6" />

            <TextView
                android:id="@+id/c_Minus"
                style="@style/Action_Buttons"
                android:text="-" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c_One"
                style="@style/Numbers_Buttons"
                android:text="1" />

            <TextView
                android:id="@+id/c_Two"
                style="@style/Numbers_Buttons"
                android:text="2"
                android:textColorLink="@color/NumerButtonColour" />

            <TextView
                android:id="@+id/c_Three"
                style="@style/Numbers_Buttons"
                android:text="3" />

            <TextView
                android:id="@+id/c_Plus"
                style="@style/Action_Buttons"
                android:text="+" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/c_Dot"
                style="@style/Numbers_Buttons"
                android:scaleType="center"
                android:src="@mipmap/dot" />

            <TextView
                android:id="@+id/c_Zero"
                style="@style/Numbers_Buttons"
                android:text="0"
                android:textColorLink="@color/NumerButtonColour" />

            <ImageView
                android:id="@+id/c_backspace_corona"
                style="@style/Numbers_Buttons"
                android:scaleType="center"
                android:src="@mipmap/backspace_corona" />

            <TextView
                style="@style/Action_Buttons"
                android:text="=" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>